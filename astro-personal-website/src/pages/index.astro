---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <div class="container">
    <a href="./about" class="box-link" draggable="false">
      <div class="box" id="about-box">
        <pre class="content"></pre>
      </div>
    </a>
    <a href="./projects" class="box-link" draggable="false">
      <div class="box" id="projects-box">
        <pre class="content"></pre>
      </div>
    </a>
    <a href="./blog" class="box-link" draggable="false">
      <div class="box" id="blog-box">
        <pre class="content"></pre>
      </div>
    </a>
  </div>

  <style>
    .container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 100%;
      height: 100%;
    }

    .box {
      margin: 10px;
      white-space: pre;
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: #fff;
      border: 1px solid #000;
      padding: 0;
    }

    .box-link {
      color: inherit;
      text-decoration: none;
    }

    .content {
      color: #000;
      font-size: 1rem;
      line-height: 1;  /* Ensure line-height is set to 1 to avoid extra spacing */
    }
  </style>
</BaseLayout>
